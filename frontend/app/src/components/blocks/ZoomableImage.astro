---
interface Props {
    src:      string;
    alt:        string;
}

const {
    src,
    alt = '',
} = Astro.props
---

<figure
    x-data={`{
        init_zoom() {
            mediumZoom($el.children[0], {
                background: 'var(--solid-transparency-background)',
                scrollOffset: 0,
                margin: 24,
                metaClick: false,
            })
        }
    }`}
    x-init="init_zoom()"
>
    <img
        data-zoomable
        src={src}
        alt={alt}
    />
</figure>